<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/view_title_bar_main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <LinearLayout
        android:id="@+id/ll_title_text"
        android:layout_width="match_parent"
        android:layout_height="@dimen/titlebar_popmenu_right"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLength="14"
            android:maxLines="1"
            android:text="我是主标题"
            android:textColor="@color/global_text_color"
            android:textSize="@dimen/global_title_text_size" />

        <TextView
            android:id="@+id/tv_subtitle_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLength="22"
            android:maxLines="1"
            android:text="副标题副标题副标题副标题"
            android:textColor="@color/global_text_color"
            android:textSize="@dimen/global_text_size_12"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>