<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="295dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_shape"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/default_padding"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/global_text_color"
            android:textSize="@dimen/global_title_text_size"
            tools:text="标题标题标题标题" />

        <TextView
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:gravity="center"
            android:lineSpacingExtra="@dimen/default_padding"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:textColor="@color/dialog_message"
            android:textSize="@dimen/global_btn_text_size"
            tools:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容" />

    </LinearLayout>

    <include layout="@layout/view_divider" />

    <TextView
        android:id="@+id/ok_tv"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center"
        android:textColor="@color/btn_red_bg_color"
        android:textSize="@dimen/global_btn_text_size"
        tools:text="确定" />
</LinearLayout>